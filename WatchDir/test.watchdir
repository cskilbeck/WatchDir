<?xml version="1.0" encoding="utf-8"?>

<watcher>

  <watch>
    <!-- path to monitor -->
    <path>%USERPROFILE%\Projects\html</path>

    <!-- monitor subfolders -->
    <recursive>true</recursive>

    <!-- read write (&others) -->
    <triggers>write</triggers>

    <!-- waits for this much idle time before kicking off commands -->
    <settleDelay>0.25</settleDelay>

    <!-- a set of commands to run -->
    <command on="all">
      <exec>
        autohotkey %USERPROFEIL%\Documents\RefreshChrome.ahk
      </exec>
    </command>
  </watch>

</watcher>
